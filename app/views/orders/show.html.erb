<% @order ||= object %>
<h1>Order #<%= @order.id %></h1>

<%= form_for(@order, html:{class:'form-inline'}) do |f| %>
    <div class="row">
      <div class="col-xs-3">
        <div class="field form-group">
          <%= f.label :title %><br>
          <%= f.text_field :title, class:'form-control', readonly: :true  %>
        </div>
      </div>
      <div class="col-xs-3">
        <div class="field form-group">
          <%= f.label :status%><br>
          <%= f.text_field :status_upcase , class:'form-control', disabled: true%>
        </div>
      </div>
      <div class="col-xs-3">
        <div class="field form-group">
          <%= f.label :brand%><br>
          <%= f.text_field :brand , class:'form-control', disabled: true%>
        </div>
      </div>
      <div class="col-xs-3">
        <div class="field form-group">
          <%= f.label :notes %><br>
          <%= f.text_area :notes, class:'form-control', readonly: :true  %>
        </div>
      </div>
    </div>
    <hr class="order">
    <table id="orders" class="table-responsive display table table-striped table-bordered table-condensed">
      <thead>
      <tr>
        <th>No</th>
        <th width="11%" class="right-align">Quantity</th>
        <th width="25%">Item Name</th>
        <th>Item number</th>
        <th>Original number</th>
        <th>Description</th>
        <th width="10%">Brand</th>
      </tr>
      </thead>
      <tbody>
      <% @order.order_items.each_with_index do |order_item,index|%>
        <%= f.fields_for :order_items, order_item do |order_item_f| %>
            <tr>
              <td>
                <%= index+1 %>
              </td>
              <td class="right-align">
                <%= order_item_f.object.qty %>
              </td>
              <td>
                <%= order_item_f.object.item.name %>
              </td>
              <td>
                <%= order_item_f.object.item.item_number %>
              </td>
              <td>
                <%= order_item_f.object.item.original_number %>
              </td>
              <td>
                <%= order_item_f.object.item.description %>
              </td>
              <td>
                <%= order_item_f.object.brand%>
              </td>
            </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
<% end %>

<%= render 'modals/duplicate_order_item', id: "duplicate_order_item"%>

