<div style="clear: both">
  <h4 style="float: left">Sales Order#: <%= @sale.transaction_num %></h4>
  <h4 style="float: right; font-size: 24px"><b><%= @sale.status_upcase %></b></h4>
</div>
<div style="clear: both">
  <%= render 'form', viewOnlyMode: true, show_sale_items: true %>
  <hr class="hr-dark">
  <div class="row">
    <div class="col-xs-9">
      <div class="field form-group">
        <label for="created_by">Created By: </label>
        <span><%= @sale.creator.name %></span>
      </div>
    </div>
    <div class="col-xs-3">
      <div class="field form-group" style="text-align: right">
        <label for="created_by">Printed By: </label>
        <span><%= @current_user.name %></span>
      </div>
    </div>
  </div>
</div>
<script>
  $(document).ready(function(){
      setTimeout(function(){
        print();
      },1230);
  });
</script>