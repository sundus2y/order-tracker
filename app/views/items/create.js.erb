<% if @item.errors.count == 0 %>
    $('tr#dup_<%= params['dup_id'] %>').find('td').fadeOut('slow', function(here){
        $(here).parents('tr:first').remove();
    });
<% else %>
    $($("tr#dup_<%= params['dup_id']%>").find('td')[3]).fadeIn(100).fadeOut(100).fadeIn(100).fadeOut(100).fadeIn(100);
<% end %>
