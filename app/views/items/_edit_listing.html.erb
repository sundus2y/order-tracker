<table id="items" class="table-responsive display table table-striped table-bordered">
  <thead>
  <tr>
    <th>No</th>
    <th>Name</th>
    <th>Description</th>
    <th>Item number</th>
    <th>Actions</th>
  </tr>
  </thead>

  <tbody>
  <% items.each_with_index do |item,index| %>
      <%= form_for(item,remote: true) do |f| %>
          <tr>
            <td><%= index+1 %></td>
            <td>
              <div class="field form-group">
                <%= f.text_field :name, class:"form-control" %>
              </div>
            </td>
            <td>
              <div class="field form-group">
                <%= f.text_field :description, class:"form-control" %>
              </div>
            </td>
            <td>
              <div class="field form-group">
                <%= f.text_field :item_number, class:"form-control" %>
              </div>
            </td>
            <td>
              <div class="actions">
                <%= button_tag("Add", type: 'submit', class: "btn btn-primary btn-block") %>
              </div>
            </td>
          </tr>
      <% end %>
  <% end %>
  </tbody>
</table>
