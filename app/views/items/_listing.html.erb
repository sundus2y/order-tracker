<table id="items" class="table-responsive display table table-striped table-bordered">
  <thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Item number</th>
    <th>Original number</th>
    <th>Description</th>
    <th>Actions</th>
  </tr>
  </thead>

  <tbody>
  <% items.each_with_index do |item,index| %>
    <tr>
      <td><%= line_number(index,@items.try(:current_page)) %></td>
      <td><%= item.name %></td>
      <td><%= item.item_number %></td>
      <td><%= item.original_number %></td>
      <td><%= description_formatter(item.description) %></td>
      <td>
        <%= send(actions,item) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>