FROM prodrigestivill/postgres-backup-local

ENV POSTGRES_HOST 'ots_db_1'
ENV POSTGRES_DB 'ots_prod'
ENV POSTGRES_USER 'postgres'
ENV POSTGRES_PASSWORD 'P0$t9res!2019'
ENV POSTGRES_EXTRA_OPTS '-Fc --no-acl --no-owner -h'
ENV SCHEDULE '@daily 11h30m00s'
ENV BACKUP_KEEP_DAYS '7'
ENV BACKUP_KEEP_WEEKS '4'
ENV BACKUP_KEEP_MONTHS '6'
ENV HEALTHCHECK_PORT '8081'

EXPOSE 8081